<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aserbao.aserbaosandroid.aaSource.android.material.button.MaterialButtonActivity">
    <Button
        android:id="@+id/material_btn"
        android:text="点我一下你试试？"
        android:textSize="22dp"
        android:clickable="true"
        style="@style/TextButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/material_iv"
        android:clickable="true"
        style="@style/TextButton"
        android:src="@drawable/mm_1"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/material_tv"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="动动我试试！"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</FrameLayout>
