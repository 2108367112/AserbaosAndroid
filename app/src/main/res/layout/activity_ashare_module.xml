<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/a_share_module_view"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <FrameLayout
            android:id="@+id/animator_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/animator_ll_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/module_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/module_recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>

    <com.aserbao.aserbaosandroid.ui.customView.CircleImageView
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|center"
        android:id="@+id/a_share_module_circle_iv"
        android:src="@drawable/mm_3"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:layout_marginTop="70dp"
        android:text="点击跳转，常按切换方向"
        android:id="@+id/a_share_module_btn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />


    <include layout="@layout/common_show_activity_name_tv"/>
</FrameLayout>