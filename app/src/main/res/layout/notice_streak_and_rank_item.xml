<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.aserbao.aserbaosandroid.ui.customView.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/notice_rv_request_location_head_civ"
        android:src="@drawable/emoji_01"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="52dp"
        android:layout_height="52dp" />
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/notice_rv_request_location_head_civ"
        app:layout_constraintRight_toLeftOf="@+id/notice_rv_streak_right_tv"
        android:id="@+id/notice_rv_streak_and_rank_item_ll"
        android:paddingTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notice_rv_streak_and_rank_item_name_tv"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="Your name"
            android:textColor="@color/black50"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="left"
            android:id="@+id/notice_rv_streak_and_rank_item_time_tv"
            android:textSize="12sp"
            android:paddingLeft="4dp"
            android:textColor="@color/black30"
            android:text="1分钟前"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="17dp" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_rv_streak_and_rank_item_ll"
        app:layout_constraintLeft_toLeftOf="@+id/notice_rv_streak_and_rank_item_ll"
        app:layout_constraintRight_toRightOf="@+id/notice_rv_streak_and_rank_item_ll"
        android:paddingBottom="8dp"
        android:layout_below="@+id/notice_rv_streak_and_rank_item_ll"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notice_rv_streak_and_rank_item_content_tv"
            android:text="保持联系已"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/notice_rv_streak_and_rank_item_content_bold_tv"
            android:text="10天 "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/notice_rv_streak_and_rank_item_content_three_tv"
            android:text="10天 "
            android:visibility="gone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/notice_rv_streak_and_rank_item_streak_iv"
            android:src="@drawable/emoji_00"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/notice_rv_streak_right_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/emoji_01"
        android:text="10"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_width="37dp"
        android:layout_height="48dp" />

    <com.aserbao.aserbaosandroid.ui.customView.CircleImageView
        android:visibility="gone"
        android:id="@+id/notice_rv_streak_right_civ"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />
</android.support.constraint.ConstraintLayout>