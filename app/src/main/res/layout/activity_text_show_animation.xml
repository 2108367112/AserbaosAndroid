<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.aserbao.aserbaosandroid.ui.texts.textViews.textShowAnimation.TextShowAnimationActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.aserbao.aserbaosandroid.AUtils.AUI.layout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/anim_start_btn"
                android:text="开始动画"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.aserbao.aserbaosandroid.AUtils.AUI.layout.FlowLayout>
        <com.aserbao.aserbaosandroid.ui.texts.textViews.textShowAnimation.animTextView.FlyTxtView
            android:id="@+id/anim_fly_txt_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</ScrollView>
